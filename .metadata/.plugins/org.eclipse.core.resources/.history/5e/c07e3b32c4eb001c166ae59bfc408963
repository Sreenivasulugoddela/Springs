package com.techouts.configuration;

import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.ViewResolver;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;
import org.springframework.web.servlet.view.InternalResourceViewResolver;

@Configuration
@EnableWebMvc
@ComponentScan(basePackages= "com.techouts.configuration")
public class DemoAppConfig 
{
    public ViewResolver viewResolve()
    {
    	InternalResourceViewResolver viewReslover=new InternalResourceViewResolver();
    	viewReslover.setPrefix("WEB-APP/view");
    	viewReslover.setSuffix(".jsp");
    	return viewReslover;
    }
}
